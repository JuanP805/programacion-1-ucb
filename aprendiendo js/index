  <!-- Carga tus funciones -->
  <!-- Importante: agrega/edita aprendiendo.js y define miPrimerAlgoritmo() ahí -->
  <script src="aprendiendo.js" defer></script>

  <script>
    // Utilidad: formatear salida de cualquier tipo
    function formatearResultado(valor){
      try{
        if (typeof valor === 'string') return valor;
        return JSON.stringify(valor, null, 2);
      }catch(_){
        return String(valor);
      }
    }

    // Manejo del botón y ejecución segura
    function mostrarMensaje(msg, tipo='info'){
      const salida = document.getElementById('salida');
      const colores = {
        info: '#93c5fd',
        ok: '#34d399',
        error: '#fca5a5'
      };
      salida.innerHTML = '<strong style="color:' + (colores[tipo]||'#93c5fd') + '">' + msg + '</strong>';
    }

    function anexarResultado(valor){
      const salida = document.getElementById('salida');
      salida.textContent = formatearResultado(valor);
    }

    function ejecutarAlgoritmo(){
      const fn = window.miPrimerAlgoritmo;
      if (typeof fn !== 'function'){
        mostrarMensaje('Define miPrimerAlgoritmo() en aprendiendo.js y vuelve a intentarlo.', 'error');
        return;
      }
      try{
        const resultado = fn();
        // Si la función es asíncrona o devuelve Promesa
        if (resultado && typeof resultado.then === 'function'){
          mostrarMensaje('Ejecutando miPrimerAlgoritmo()…', 'info');
          resultado
            .then(res => anexarResultado(res))
            .catch(err => mostrarMensaje('Error: ' + (err?.message || err), 'error'));
        }else{
          anexarResultado(resultado);
        }
      }catch(err){
        mostrarMensaje('Error al ejecutar: ' + (err?.message || err), 'error');
      }
    }

    // Wire-up
    document.addEventListener('DOMContentLoaded', function(){
      document.getElementById('year').textContent = new Date().getFullYear();
      const btn = document.getElementById('btn-algoritmo');
      btn.addEventListener('click', ejecutarAlgoritmo);
    });

    // Ejemplo opcional (elimina esto cuando crees aprendiendo.js)
    // Descomenta para ver algo funcionando ya:
    /*
    function miPrimerAlgoritmo(){
      // Demo: calcula los primeros 10 cuadrados
      return Array.from({length:10}, (_,i) => ({ n:i+1, cuadrado:(i+1)*(i+1) }));
    }
    */
  </script>
